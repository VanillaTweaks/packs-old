{
	"compilerOptions": {
		"target": "esnext",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"baseUrl": ".",
		"downlevelIteration": true
	},
	"include": [
		"**/*.js",
		"**/*.ts",
	],
	"exclude": [
		"node_modules",
		".sandstone",
		"dist"
	]
}